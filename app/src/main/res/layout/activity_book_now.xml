<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_now"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/home"/>

            <TextView
                android:id="@+id/welcome_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:text="Book your Slot"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                />





        </LinearLayout>
        <!--insert card view part here-->

    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- Select date -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Select Date :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text_bg"
                android:ems="10"
                android:hint="Date"
                android:textColor="#000000"
                android:textSize="20dp"

                />


            <!-- Select Time -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Select Time :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="From time"
                android:textColor="#000000"
                android:textSize="20dp"


                />

         <!--   <TextView
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="To time"
                android:textColor="#000000"
                android:textSize="20dp"


                />-->


            <!-- Department -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/department"
                    android:textAppearance="@style/department" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/display_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text_bg" />
            </LinearLayout>

            <!-- Room Number -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/room_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/room_no"
                    android:textAppearance="@style/room_no" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/display_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text_bg" />
            </LinearLayout>

            <!-- Description -->


            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Description"
                android:textColor="#000000"
                android:textSize="18dp"

                />


            <!--Button Book Now -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edit_text_bg"
                android:gravity="center"
                android:text="Book Now"
                android:textColor="#000000" />

        </LinearLayout>
</RelativeLayout>

</LinearLayout>