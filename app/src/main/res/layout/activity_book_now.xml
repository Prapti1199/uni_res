<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_now"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="left"
                android:id="@+id/home"/>

            <TextView
                android:id="@+id/welcome_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:text="Book your Slot"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal"
                />





        </LinearLayout>
        <!--insert card view part here-->

    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

    <!-- Select date -->
        <TextView
            android:id="@+id/date"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="@drawable/custom_edit_text_bg"
            android:drawableLeft="@drawable/ic_date"
            />





    <!-- Select Time -->
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:hint="Select time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@drawable/custom_edit_text_bg"
            android:drawableLeft="@drawable/ic_time"
            />


        <!-- Department -->
    <TextView
        android:id="@+id/department"
        android:layout_width="215dp"
        android:layout_height="58dp"

        android:layout_marginTop="120dp"

        android:gravity="center_horizontal|top"
        android:text="@string/department"
        android:textAppearance="@style/department" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"

        android:layout_marginTop="120dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />
    <TextView
        android:id="@+id/display_result"
        android:background="@drawable/custom_edit_text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Room Number -->
    <TextView
        android:id="@+id/room_no"
        android:layout_width="201dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:text="@string/room_no"
        android:textAppearance="@style/room_no"
        android:gravity="center_horizontal|top"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="180dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />
    <TextView
        android:id="@+id/display_result1"
        android:background="@drawable/custom_edit_text_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Description -->


        <EditText
            android:id="@+id/description"
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="18dp"
            android:hint="Description"
            android:textColor="#000000"
            android:background="@drawable/custom_edit_text_bg"

            />





        <!--Button Book Now -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:background="@drawable/custom_edit_text_bg"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Book Now"
        android:textColor="#000000"/>


</RelativeLayout>

</LinearLayout>